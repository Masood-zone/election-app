// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model voters {
  studentId    String   @id @map("_id")
  studentName String?
  email        String?
  telephone    String?
  password     String?
  del_flg      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  voting       voting[]
}

model positions {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  positionName String       @unique
  description  String?
  del_flg      Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  candidates   candidates[]
  voting       voting[]
}

model candidates {
  id     String    @id @default(auto()) @map("_id") @db.ObjectId 
  candidateName String @unique
  telephone     String?
  profile       String?
  positions     positions? @relation(fields: [positionsId], references: [id])
  positionsId   String?   @db.ObjectId  @unique
  del_flag      Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  voting        voting[]
}

model voting {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  positions    positions?  @relation(fields: [positionsId], references: [id])
  positionsId  String?     @db.ObjectId
  candidates   candidates? @relation(fields: [candidateId], references: [id])
  candidateId String?       @db.ObjectId
  voters       voters?     @relation(fields: [voterId], references: [studentId])
  voterId     String?
}
